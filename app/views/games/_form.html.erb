<%= link_to 'Back to list', games_path%>
<%= form_for(@game) do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :week %>
    <%= f.select :week, (1..21) %>
  </div>
  <div class="field">
    <%= f.label :away %>
    <%= f.select :away, Game::TEAMS %>

    <%= f.label :home %>
    <%= f.select :home, Game::TEAMS %>
    
    <%= f.label :handicap %>
    <%= f.text_field :handicap, :type=>'number' %>
  </div>
  <div class="field">
    <%= f.label :pick %>
    <%= f.select :pick, ['','away','home'] %>
  </div>
  <div class="field">
    <%= f.label :notes %>
    <%= f.text_area :notes %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
  <div class="field">
    <%= f.label :home_result %><br />
    <%= f.text_field :home_result %>
  </div>
  <div class="field">
    <%= f.label :away_result %><br />
    <%= f.text_field :away_result %>
  </div>
<% end %>
